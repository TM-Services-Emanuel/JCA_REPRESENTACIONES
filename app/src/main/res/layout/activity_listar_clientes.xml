<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actividades.Listar_Clientes">

    <LinearLayout
        android:id="@+id/linearLayout47"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fact"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo"
            android:gravity="center"
            android:text="@string/clientes"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="normal"
            app:drawableLeftCompat="@drawable/clientes48" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout64"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@color/fact"
        android:gravity="center|end"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout71"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnADDC"
            style="@android:style/Widget.DeviceDefault.Button.Borderless.Colored"
            android:layout_width="50dp"
            android:layout_height="45dp"
            app:srcCompat="@android:drawable/ic_menu_add"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
            tools:targetApi="p" />

        <ImageButton
            android:id="@+id/btnDOWC"
            style="@android:style/Widget.DeviceDefault.Button.Borderless.Colored"
            android:layout_width="50dp"
            android:layout_height="45dp"
            app:srcCompat="@android:drawable/stat_sys_download"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout71"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout48"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout47">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <EditText
                android:id="@+id/id_buscarcliente"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:autofillHints=""
                android:background="@color/white"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:fontFamily="@font/archivo"
                android:hint="@string/buscador"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColorHint="#546E7A" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <View
                    android:id="@+id/divider87"
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#D6D6D6" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_FiltarClientes"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:fontFamily="@font/archivo"
                android:text="@string/filtrar"
                android:textColor="@color/teal_700"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <ListView
            android:id="@+id/id_lista_cliente"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout48"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#009688"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/id_cli_nue_pie"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>